<% layout('layouts/boilerplate-guest') -%>

<div class="container de-flex justify-content-center align-items-center" style="margin-top: 0.5rem;">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow" style="margin-bottom: 1.5rem;">
                <img src="/images/login.jpg" alt="teacherquestioningstudent" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>


                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                        <div class="valid-feedback">
                         Looks good!
                        </div>
                    </div>
    
                    <button class="btn btn-success w-100">Login</button>
   
                </form>
                <div class="mt-3">
                    <a href="/reset/forgot-password" class="text-decoration-none">Forgot Password?</a>

                </div>
            </div>
        </div>
    </div>
</div>